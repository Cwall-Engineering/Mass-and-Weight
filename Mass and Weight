#include <iostream>

using namespace std;

int main()
{
    cout << "Enter mass to calculate weight" << endl;
    double weight, mass;
    cin >> mass;
    weight = mass * 9.8;
    cout << "The object weighs " << weight << " Neutons\n";
    if (weight > 1000) cout << "Object is too heavy";
    else if (weight <10) cout << "Object is too light";
        return 0;
}
